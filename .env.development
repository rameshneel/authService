# Redis (Local Development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=devpassword
REDIS_MAX_CONNECTIONS=20
REDIS_TIMEOUT=5

# RabbitMQ (Local Dev)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_HEARTBEAT=30
RABBITMQ_PREFETCH_COUNT=10

# gRPC (Local Dev)
GRPC_SERVER_ADDRESS=localhost:50051
GRPC_MAX_MESSAGE_SIZE=2097152  # 2MB max
GRPC_KEEP_ALIVE_TIMEOUT=60
GRPC_TLS_ENABLED=false  # TLS disabled for local testing

# Socket.io Server Configuration (Development)
SOCKET_IO_HOST=localhost
SOCKET_IO_PORT=3000
SOCKET_IO_CORS_ORIGIN=http://localhost:3001  # Frontend local URL
SOCKET_IO_TRANSPORTS=["websocket", "polling"]  # Allowed transports
SOCKET_IO_DEBUG=true  # Enable debug logging
SOCKET_IO_RECONNECT_ATTEMPTS=5  # Retry connection 5 times
SOCKET_IO_RECONNECT_DELAY=2000  # Delay between reconnection attempts (ms)


# Logging
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs/dev.log
